<%- include("./partials/header") %>

<div class="container mt-5">
    <form method="POST" action="/add/post" class="d-flex">
        <input type="text" name="description" class="form-control" placeholder="Enter post description">
        <input type="submit" value="Add Post" class="btn btn-md btn-primary mx-2">
    </form>

    <ul class="list-group my-5">
        <% post.forEach(posts => { %>
            <li class="list-group-item">
                <%= posts.description %>
                <a href="/delete/post/<%= posts._id %>" class="btn btn-danger btn-md">Delete</a>
            </li>
        <% }) %>
    </ul>
</div>

<%- include("./partials/footer") %>